<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Safety Illustration -->

        <!-- Title -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Safety Preference"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize a safety check reminder that fits your needs."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="24dp"
            android:background="@color/medium_gray"/>

        <!-- Time Input Section (Hours & Minutes in One Line) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <!-- Hours Input -->
            <EditText
                android:id="@+id/hours_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Hours"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginEnd="8dp"/>

            <!-- Minutes Input -->
            <EditText
                android:id="@+id/minutes_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Minutes"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginStart="8dp"/>

            <EditText
                android:id="@+id/seconds_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Seconds"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginStart="8dp"/>
    </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_blue_button"
            android:stateListAnimator="@null"
            android:text="Confirm Safety Timer"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_blue_button"
            android:stateListAnimator="@null"
            android:text="Stop the timer"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Instruction Text -->
        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After the set time, you'll receive a safety check alert. If safe, click OK; if not, click NO."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/light_gray"
            android:layout_marginTop="24dp"
            android:textAlignment="center"/>
    </LinearLayout>
</ScrollView>